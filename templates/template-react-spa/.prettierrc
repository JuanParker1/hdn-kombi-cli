{
  "printWidth": 100,
  "singleQuote": false,
  "arrowParens": "avoid",
  "trailingComma": "all",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": "*.feature",
      "options": {
        "parser": "cucumber"
      }
    }
  ]
}
